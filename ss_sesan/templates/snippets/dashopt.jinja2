{% if user_role!=1 %}

    {% set vals = [["dashboard", "Inicio", "fa-th-large"],["profile", "Perfil", "fa-user-circle-o"], ["dashboard", "Acerca de", "fa-ellipsis-h"]] %}

    {% for v in vals %}

        {% if v[0] == active %}
            <li class="active">
                <a href="{{ request.route_url(v[0]) }}"><i class="fa {{ v[2] }}"></i> <span
                        class="nav-label">{{ v[1] }}</span> </a>
            </li>
        {% else %}
            <li>
                <a href="{{ request.route_url(v[0]) }}"><i class="fa {{ v[2] }}"></i> <span
                        class="nav-label">{{ v[1] }}</span> </a>
            </li>

        {% endif %}

    {% endfor %}

    {% if rpt %}

        <li>
            <a href="{{ request.route_url('report', date=dashData.date[0] +"_"+ dashData.date[1]) }}"><i
                    class="fa fa-ellipsis-h"></i>
                <span
                        class="nav-label">Reporte</span></a>

        </li>

    {% endif %}

{% endif %}

