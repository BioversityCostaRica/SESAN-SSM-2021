<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/animate.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
</head>

<body style="background-color: #fff">

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title text-center" style="padding: revert;border-color: #ffffff">
                <h1><span class="text-navy">SESAN - Salas Situacionales Municipales</span></h1>

                {% if data.typeR == "2" or data.typeR =="3" %}
                    <h1>Resumen Departamental - {{ data.munic.decode("latin1" ) }}</h1>
                    <h1>Fecha de creación - {{ data.date }}</h1>
                {% else %}
                    <h1>Resumen Municipal - {{ data.munic.decode("latin1" ) }}</h1>
                {% endif %}


            </div>
            <div class="ibox-content" style="border-color: #ffffff">

                {% if data.typeR == "2" or data.typeR =="3" %}


                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th class="text-center">Municipio</th>
                            <th class="text-center">Total de registros</th>
                            <th class="text-center">Meses reportados</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for m in data.municNames %}
                            <tr class="text-center">
                                <td style="vertical-align: center;">{{ data.municNames[m].decode("latin1") }}</td>
                                <td style="vertical-align: center;">{{ data.reg_tot[m] }}</td>
                                <td style="vertical-align: center;">{{ data.mes_repor[m] }}</td>

                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                {% else %}



                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th class="text-center">Total de registros</th>
                            <th class="text-center">Meses reportados</th>
                            <th class="text-center">Fecha del reporte</th>
                        </tr>
                        </thead>
                        <tbody>

                        <tr class="text-center">
                            <td style="vertical-align: center;">{{ data.reg_tot }}</td>
                            <td style="vertical-align: center;">{{ data.mes_repor }}</td>
                            <td style="vertical-align: center;">{{ data.date }}</td>
                        </tr>

                        </tbody>
                    </table>

                {% endif %}

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title text-center" style="padding: revert;border-color: #ffffff">
                <h1>Resumen anual SAN</h1>

            </div>
        </div>
        <div class="ibox-content" style="border-color: #ffffff">

            {% if data.typeR == "2" or data.typeR =="3" %}

                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th class="text-center">Municipio</th>
                        <th class="text-center">Año</th>
                        <th class="text-center">Enero</th>
                        <th class="text-center">Febrero</th>
                        <th class="text-center">Marzo</th>
                        <th class="text-center">Abril</th>
                        <th class="text-center">Mayo</th>
                        <th class="text-center">Junio</th>
                        <th class="text-center">Julio</th>
                        <th class="text-center">Agosto</th>
                        <th class="text-center">Septiembre</th>
                        <th class="text-center">Octubre</th>
                        <th class="text-center">Noviembre</th>
                        <th class="text-center">Diciembre</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for m in data.municNames %}

                        {% for y in data.years[m] %}
                            <tr class="text-center">
                                {% if loop.index == 1 %}
                                    <td style="vertical-align: center;">{{ data.municNames[m].decode("latin1") }}</td>
                                {% else %}
                                    <td style="vertical-align: center;"></td>
                                {% endif %}
                                <td style="vertical-align: center;">{{ y }}</td>
                                {% for dy in data.years[m][y] %}
                                    {% if dy == "" %}
                                        <td style="vertical-align: center;">{{ dy }}</td>
                                    {% else %}
                                        <td style="vertical-align: center;" bgcolor="{{ dy[1] }}">{{ dy[0] }}</td>
                                    {% endif %}


                                {% endfor %}

                            </tr>
                        {% endfor %}
                    {% endfor %}

                    </tbody>
                </table>
            {% else %}

                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th class="text-center"> Año</th>
                        <th class="text-center">Enero</th>
                        <th class="text-center">Febrero</th>
                        <th class="text-center">Marzo</th>
                        <th class="text-center">Abril</th>
                        <th class="text-center">Mayo</th>
                        <th class="text-center">Junio</th>
                        <th class="text-center">Julio</th>
                        <th class="text-center">Agosto</th>
                        <th class="text-center">Septiembre</th>
                        <th class="text-center">Octubre</th>
                        <th class="text-center">Noviembre</th>
                        <th class="text-center">Diciembre</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for y in data.years %}
                        <tr class="text-center">

                            <td style="vertical-align: center;">{{ y }}</td>
                            {% for dy in data.years[y] %}
                                {% if dy == "" %}
                                    <td style="vertical-align: center;">{{ dy }}</td>
                                {% else %}
                                    <td style="vertical-align: center;" bgcolor="{{ dy[1] }}">{{ dy[0] }}</td>
                                {% endif %}


                            {% endfor %}

                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            {% endif %}

        </div>
    </div>
</div>
<div class="row" style="page-break-before:always">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title text-center" style="padding: revert;border-color: #ffffff">
