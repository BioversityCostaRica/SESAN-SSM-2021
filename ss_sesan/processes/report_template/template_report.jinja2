            </div>
        </div>
        <div class="ibox-content" style="border-color: #ffffff">

            {% if data.typeR == "2" or data.typeR =="3" %}

                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th class="text-center">Municipio</th>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Disponibilidad</th>
                        <th class="text-center">Aprovechamiento Biologico</th>
                        <th class="text-center">Acceso</th>

                    </tr>
                    </thead>
                    <tbody>

                    {% for m in data.municNames %}

                        {% for p in data.dates[m] %}

                            <tr class="text-center">
                                {% if loop.index == 1 %}
                                    <td style="vertical-align: center;">{{ data.municNames[m].decode("latin1") }}</td>
                                {% else %}
                                    <td style="vertical-align: center;"></td>
                                {% endif %}
                                <td style="vertical-align: center;">{{ p }}</td>
                                {% if data.per_p[m][p][1] %}
                                    <td style="vertical-align: center;"
                                        bgcolor="{{ data.per_p[m][p][1][2] }}">{{ data.per_p[m][p][1][0] }}</td>
                                {% else %}
                                    <td style="vertical-align: center;"></td>
                                {% endif %}

                                {% if data.per_p[m][p][2] %}
                                    <td style="vertical-align: center;"
                                        bgcolor="{{ data.per_p[m][p][2][2] }}">{{ data.per_p[m][p][2][0] }}</td>
                                {% else %}
                                    <td style="vertical-align: center;"></td>
                                {% endif %}

                                {% if data.per_p[m][p][3] %}
                                    <td style="vertical-align: center;"
                                        bgcolor="{{ data.per_p[m][p][3][2] }}">{{ data.per_p[m][p][3][0] }}</td>
                                {% else %}
                                    <td style="vertical-align: center;"></td>
                                {% endif %}


                            </tr>
                        {% endfor %}
                    {% endfor %}


                    </tbody>
                </table>
            {% else %}

                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Disponibilidad</th>
                        <th class="text-center">Aprovechamiento Biologico</th>
                        <th class="text-center">Acceso</th>

                    </tr>
                    </thead>
                    <tbody>


                    {% for p in data.dates %}

                        <tr class="text-center">
                            <td style="vertical-align: center;">{{ p }}</td>
                            {% if data.per_p[p][1] %}
                                <td style="vertical-align: center;"
                                    bgcolor="{{ data.per_p[p][1][2] }}">{{ data.per_p[p][1][0] }}</td>
                            {% else %}
                                <td style="vertical-align: center;"></td>
                            {% endif %}

                            {% if data.per_p[p][2] %}
                                <td style="vertical-align: center;"
                                    bgcolor="{{ data.per_p[p][2][2] }}">{{ data.per_p[p][2][0] }}</td>
                            {% else %}
                                <td style="vertical-align: center;"></td>
                            {% endif %}

                            {% if data.per_p[p][3] %}
                                <td style="vertical-align: center;"
                                    bgcolor="{{ data.per_p[p][3][2] }}">{{ data.per_p[p][3][0] }}</td>
                            {% else %}
                                <td style="vertical-align: center;"></td>
                            {% endif %}


                        </tr>
                    {% endfor %}


                    </tbody>
                </table>

            {% endif %}

        </div>
    </div>
</div>

{% if data.typeR == "2" or data.typeR =="3" %}

    <div class="row"  style="page-break-before:always">
